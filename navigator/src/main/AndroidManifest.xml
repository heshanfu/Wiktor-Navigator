<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.org.seva.navigator">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".NavigatorApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDECNjt1fl18jA2W5O2n3e_JMFueCjEdBs"/>

        <activity
            android:name=".view.activity.NavigationActivity"
            android:label="@string/app_name_short" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.ContactsActivity"
            android:label="@string/contacts_activity_label">
        </activity>

        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.activity.DeleteUserActivity"
            android:label="@string/delete_user_activity_label" />

        <activity
            android:name=".view.activity.SearchActivity"
            android:label="@string/search_activity_label"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <service android:name=".NavigatorService"/>
    </application>
</manifest>
